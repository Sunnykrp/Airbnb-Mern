<%layout("/layouts/boilerplate.ejs")%>
<body>
  <h3>All Listings</h3>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for(let Listings of allListing){%>
      <a href="/listings/<%=Listings._id%>" class="listing-link">
    <div class="card" style="width: 20rem">
      <img src="<%=Listings.image%>" class="card-img-top" alt="listing_image" style="height: 20rem" />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%=Listings.title%></b> <br />
          &#8377; <%=Number(Listings.price).toLocaleString("en-IN")%> / night
        </p>
      </div>
    </div>
  </a>
    <%}%>
  </div>
</body>
